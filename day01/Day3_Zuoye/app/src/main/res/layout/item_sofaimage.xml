<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_sofaiamge_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/tv_sofaiamge_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/iv_sofaiamge_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_sofaimage_feeds"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/iv_sofaiamge_avatar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_sofaimage_cover"
        app:layout_constraintTop_toBottomOf="@id/tv_sofaimage_feeds"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_sofaimage_activity"
        app:layout_constraintTop_toBottomOf="@id/iv_sofaimage_cover"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/ll_sofaimage"
        app:layout_constraintTop_toBottomOf="@id/tv_sofaimage_activity"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/icon_cell_like"
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
        <ImageView
            android:src="@drawable/icon_cell_diss"
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
        <ImageView
            android:src="@drawable/icon_cell_comment"
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
        <ImageView
            android:src="@drawable/icon_cell_share"
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>