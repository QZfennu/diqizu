<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_margin="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/img"/>
    <TextView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="50dp"
        android:id="@+id/name"
        android:text="网名"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img"/>
    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="标题"
        android:id="@+id/title"
        app:layout_constraintTop_toBottomOf="@id/img"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:layout_margin="10dp"
        android:layout_width="130dp"
        android:layout_height="230dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/pic"/>
    <TextView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:text="美好生活"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pic"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/i1"
        android:src="@drawable/icon_cell_comment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_cell_like"
        android:layout_marginLeft="50dp"
        android:id="@+id/i2"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintLeft_toRightOf="@id/i1"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_cell_diss"
        android:layout_marginLeft="50dp"
        android:id="@+id/i3"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintLeft_toRightOf="@id/i2"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_cell_share"
        android:layout_marginLeft="50dp"
        android:id="@+id/i4"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintLeft_toRightOf="@id/i3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="分享"
        android:layout_marginLeft="5dp"
        android:id="@+id/i5"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintLeft_toRightOf="@id/i4"/>


</androidx.constraintlayout.widget.ConstraintLayout>