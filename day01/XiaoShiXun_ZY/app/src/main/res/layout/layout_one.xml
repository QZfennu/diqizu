<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/one_img"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/one_text"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/two_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <ImageView
            android:id="@+id/two_img"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="多彩生活" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/i1"
        android:layout_marginTop="10dp"
        android:background="@drawable/icon_cell_like"
        android:layout_width="30dp"
        android:layout_height="30dp" />


        <TextView
        android:id="@+id/i2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/icon_cell_diss"
        android:layout_width="30dp"
        android:layout_height="30dp" />

        <TextView
            android:id="@+id/i3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/icon_cell_comment"
            android:layout_width="30dp"
            android:layout_height="30dp" />


        <TextView
            android:id="@+id/i4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/icon_cell_share"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>

</LinearLayout>