<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FindFragment">
    <ImageView
        android:src="@drawable/ic_icon_0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/img1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:text="袍子"
        app:layout_constraintTop_toBottomOf="@id/img1"
        app:layout_constraintLeft_toLeftOf="@id/img1"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="@id/img1"/>
    <ImageView
        android:src="@drawable/ic_icon_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintLeft_toRightOf="@id/img1"
        android:id="@+id/img2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:text="社团"
        app:layout_constraintTop_toBottomOf="@id/img2"
        app:layout_constraintLeft_toLeftOf="@id/img2"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="@id/img2"/>
    <ImageView
        android:src="@drawable/ic_icon_4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintLeft_toRightOf="@id/img2"
        android:id="@+id/img3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text3"
        android:text="排行榜"
        app:layout_constraintTop_toBottomOf="@id/img3"
        app:layout_constraintLeft_toLeftOf="@id/img3"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="@id/img3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:text="热门活动"
        app:layout_constraintTop_toBottomOf="@id/text1"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rcy"/>

</androidx.constraintlayout.widget.ConstraintLayout>